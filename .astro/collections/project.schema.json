{
  "$ref": "#/definitions/project",
  "definitions": {
    "project": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "Ongoing",
            "Completed",
            "Archived"
          ],
          "default": "Ongoing"
        },
        "date": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "stack": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "github": {
          "type": "string",
          "format": "uri"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "date",
        "stack"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}