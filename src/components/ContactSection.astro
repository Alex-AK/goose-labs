---
interface Props {
  contactEmail: string;
  responsePeriod?: string;
  includeInstructions?: boolean;
}

const { contactEmail, responsePeriod = '24 hours', includeInstructions = true } = Astro.props;
---

<section class="bg-gray-50 p-12 rounded-lg text-center">
  <h2 class="text-gray-900 mb-6 text-2xl font-semibold">Let's Talk</h2>
  <div>
    <p class="text-lg leading-relaxed text-gray-600 mb-8">
      Ready to discuss your project? I'd love to hear about what you're building and how I can help make it a success.
    </p>
    <div>
      <p class="text-xl mb-4">
        <strong>Email:</strong>
        <a href={`mailto:${contactEmail}`} class="text-orange-500 no-underline font-medium hover:underline">
          {contactEmail}
        </a>
      </p>
      {
        includeInstructions && (
          <p class="text-sm text-gray-600 italic">
            Please include details about your project, timeline, and budget range. I typically respond within{' '}
            {responsePeriod}.
          </p>
        )
      }
    </div>
  </div>
</section>
